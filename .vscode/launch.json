{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "node",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      // "runtimeVersion": "14.5.0",
      "runtimeArgs": [
        "--inspect",
        "--experimental-json-modules",
        "--experimental-import-meta-resolve",
        "--trace-warnings"
        // "--preserve-symlinks",
        // "--preserve-symlinks-main"
      ],
      "console": "integratedTerminal",
      // "args": ["--coverage"],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        // force-array-multiline
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@jsenv/cancellation/**",
        "node_modules/@rollup/**",
        "node_modules/playwright/**",
        "node_modules/playwright-chromium/**",
        "node_modules/playwright-webkit/**",
        "node_modules/playwright-firefox/**",
        "node_modules/playwright-core/**",
        "<node_internals>/**"
      ]
    },
    {
      "name": "jsenv-node-attach-child",
      "type": "node",
      "request": "attach",
      "port": 40000,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/playwright/**",
        "node_modules/rollup/**",
        "node_modules/@rollup/**",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "name": "jsenv-node-attach-subchild",
      "type": "node",
      "request": "attach",
      "port": 40001,
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": [
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/playwright/**",
        "node_modules/rollup/**",
        "node_modules/@rollup/**",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "name": "jsenv-chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:3456/node_modules/@jsenv/core/src/internal/jsenv-html-file.html?file=${relativeFile}",
      "runtimeArgs": [
        "--allow-file-access-from-files",
        "--disable-web-security"
      ],
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}",
      "smartStep": true,
      "skipFiles": [
        // force-multiline
        "node_modules/@jsenv/core/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/rollup/**",
        "node_modules/@rollup/**",
        "<node_internals>/**"
      ]
    }
  ]
}
