{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "node 12",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${file}",
      "runtimeVersion": "12.8.0",
      "runtimeArgs": ["--unhandled-rejections=strict"],
      "autoAttachChildProcesses": true,
      // "sourceMaps": false,
      "smartStep": true,
      "skipFiles": [
        // force-array-multiline
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/playwright/**",
        "<node_internals>/**"
      ]
    },
    {
      "name": "node14",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${file}",
      // "runtimeVersion": "14.5.0",
      "runtimeArgs": [
        "--unhandled-rejections=strict",
        "--experimental-json-modules",
        "--experimental-top-level-await",
        // this is to disable experimental warning
        "--no-warnings"
      ],
      // "args": ["--coverage"],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        // force-array-multiline
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/@rollup/**",
        "node_modules/playwright/**",
        "node_modules/playwright-core/**",
        "<node_internals>/**"
      ]
    },
    {
      "name": "jsenv-node",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceFolder}/script/run-node/run-node.js",
      // "program": "${workspaceFolder}/script/run-node/run-node.common.js",
      "runtimeArgs": [
        // "--unhandled-rejections=strict"
        // this is to disable experimental warnings, but it would disable unhandled rejection warning
        // "--no-warnings"
      ],
      "args": ["${relativeFile}"],
      "autoAttachChildProcesses": true,
      // "sourceMaps": false,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**/*.js",
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@babel/core/**",
        "node_modules/gensync/**",
        "node_modules/@jsenv/core/**",
        // "node_modules/@jsenv/assert/**",
        "node_modules/@jsenv/cancellation/**",
        "node_modules/@rollup/**",
        "node_modules/playwright/**",
        "node_modules/playwright-core/**",
        "node_modules/rollup/**",
        "src/internal/supportsDynamicImport.js",
        "src/internal/dynamicImportSource.js",
        "src/execute.js",
        "script/run-node/**"
      ]
    },
    {
      "name": "jsenv-node-attach-child",
      "type": "node",
      "request": "attach",
      "port": 40000,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/playwright/**",
        "node_modules/rollup/**",
        "node_modules/@rollup/**",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "name": "jsenv-node-attach-subchild",
      "type": "node",
      "request": "attach",
      "port": 40001,
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": [
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/playwright/**",
        "node_modules/rollup/**",
        "node_modules/@rollup/**",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "name": "jsenv-chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:3456/node_modules/@jsenv/core/src/internal/jsenv-html-file.html?file=${relativeFile}",
      "runtimeArgs": ["--allow-file-access-from-files", "--disable-web-security"],
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}",
      "smartStep": true,
      "skipFiles": [
        // force-multiline
        "node_modules/@jsenv/core/**",
        "node_modules/@babel/template/**",
        "node_modules/@dmail/cancellation/**",
        "node_modules/rollup/**",
        "node_modules/@rollup/**",
        "<node_internals>/**"
      ]
    }
  ]
}
