{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch with node",
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "program": "${file}",
      "sourceMaps": true,
      "trace": true,
      // "outFiles": ["${workspaceRoot}/build/**/*.js"],
      "outputCapture": "std",
      // https://github.com/Microsoft/vscode-chrome-debug-core/commit/eb552d621f1f6fbebcfca5d2390020dc7d8877e0#diff-b4f13aa3c326d081dea7875f9c0fe84aR31
      "skipFiles": [
        "node_modules/**",
        // https://github.com/Microsoft/vscode-react-native/issues/620
        "<node_internals>/**/*.js"
      ],
      "autoAttachChildProcesses": true
    },
    {
      "name": "Launch from dist",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "preLaunchTask": "compile", // ensure dist is fresh (compile before running)
      "program": "${workspaceRoot}/.vscode/runFromDist.js",
      "args": ["${file}"],
      "cwd": "${workspaceRoot}",
      "trace": "sm",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "${workspaceRoot}/dist"
      },
      "sourceMaps": false,
      "outputCapture": "std",
      "skipFiles": ["node_modules/**", "<node_internals>/**/*.js"],
      "autoAttachChildProcesses": true
    },
    {
      "name": "Launch with chrome",
      "type": "chrome",
      "request": "launch",
      "sourceMaps": true,
      // "trace": true,
      "webRoot": "${workspaceFolder}/any-name-works-maybe-because-path-resolution",
      "url": "http://127.0.0.1:3000/${relativeFile}",
      // "runtimeExecutable": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
      "runtimeArgs": ["--allow-file-access-from-files", "--disable-web-security"]
    }
  ]
}
