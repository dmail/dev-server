{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      // https://github.com/Microsoft/vscode/issues/6209
      "label": "start chromium server",
      "command": "node ./dist/bin/start-chromium-server.js --port=3000",
      "type": "shell",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "!!!DO NOT MATCH ME!!!",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^chromium server listening.+",
          "endsPattern": "^test$"
        }
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "label": "compile",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "dist",
      "label": "dist",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
